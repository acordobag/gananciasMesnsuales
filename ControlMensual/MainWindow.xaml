        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="123" Margin="18,227,0,0" VerticalAlignment="Top" Width="749" ColumnWidth="100" RowHeaderWidth="100" AutoGenerateColumns="False" MinColumnWidth="50" CanUserSortColumns="False" CanUserResizeColumns="False" CanUserReorderColumns="False">
