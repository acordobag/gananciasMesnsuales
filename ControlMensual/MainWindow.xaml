        <Label x:Name="label_Copy4" Content="Fecha fin:" HorizontalAlignment="Left" Margin="166,167,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="500,386,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy2" Content="TOTAL:" HorizontalAlignment="Left" Margin="500,355,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="645,386,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy5" Content="GANANCIA:" HorizontalAlignment="Left" Margin="645,355,0,0" VerticalAlignment="Top"/>

